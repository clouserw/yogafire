@import 'lib';

.button, .button:visited {
    color: $white;
}

.button {
    background: #4cb1ff;
    border: 0;
    border-bottom: 1px solid #1793e5;
    border-radius: 5px;
    display: inline-block;
    ellipsis();
    font: 400 15px/48px $open-stack;
    height: 48px;
    min-width: 100px;
    white-space: nowrap;
    padding: 0 20px;
    text-align: center;
    text-decoration: none;

    &:hover,
    &:focus {
        text-decoration: none;
    }

    &.launch {
        background: #82c80a;
        border-bottom-color: darken(#82c80a, 15%);

        &:hover {
            background: darken(#82c80a, 7%);
        }
    }

    // Grayish.
    &.disabled, &[disabled] {
        background: #e7e7e7;
        border-bottom-color: #b7b7b7;
        box-shadow: none;
        color: #a7a7a7;
        pointer-events: none;
    }

    // Redish.
    &.manage {
        background: #DA5132;
        border-bottom-color: #A91300;

        &:hover, &:focus {
            background: darken(#DA5132, 10%);
        }
        &:active {
            btn-shadow-active();
            border-bottom-color: darken(#A91300, 10%);
        }
    }

    // Grayish (legacy).
    &.alt {
        background: $seavan-salt-white;
        border-bottom-color: $primer-gray;
        color: $london-fog-gray;

        &:hover,
        &:focus {
            alt-btn-hover-focus();
        }
        &:hover,
        &:focus,
        &:active {
            alt-btn-hover-focus-active();
        }
        &:active {
            alt-btn-active();
        }
    }

    // Waiting/Loading spinner.
    &.loading-submit {
        position: relative;

        &:after {
            content: "";
            display: block;
            spinner('absolute alt');
            top: 8px;
        }
    }

    &[disabled], &.disabled,
    &.purchasing, &.purchased,
    &.installing, &.installed {
        pointer-events: none;
    }
    &.installed, &.purchased, &.incompatible {
        pointer-events: auto;
    }

    &:not([disabled]):not(.alt):hover,
    &:not([disabled]):not(.alt):focus {
        background: darken(#4cb1ff, 10%);
    }
    &:not([disabled]):active {
        btn-shadow-active();
        background: $seavan-salt-white;
        border: 0;
        color: $london-fog-gray;
    }

    .spin {
        display: inline-block;
        spinner('install');
    }
}

.detail .button.product {
    fatten();

    .spin {
        height: 36px;
    }
}

@media (max-width: 600px) {
    .button {
        padding: 0 15px;

        &.fat {
            display: block;
            width: 100%;
        }
    }
}

[data-page-type~="root"] .listing .mkt-tile .button {
    height: 30px;
}
