@import 'lib';

.featured-header {
    padding-top: 18px;

    h3 {
        font-weight: 400;
    }
}

.category-nav {
    background: #e0e0e0;
    font-size: 0;
    list-style: none;
    text-align: center;
    width: 100%;

    li {
        background-position: center 10px;
        background-repeat: no-repeat;
        background-size: 27px 27px;
        display: inline-block;
        width: 25%;

        &.home {
            background-image: url(/media/img/yogafire/category/home.svg);
        }
        &.tarako-games {
            background-image: url(/media/img/yogafire/category/games.svg);
            background-position: center 12px;
            background-size: 33px 24px;
        }
        &.tarako-lifestyle {
            background-image: url(/media/img/yogafire/category/lifestyle.svg);
            background-position: center 13px;
            background-size: 32px 23px;
        }
        &.tarako-tools {
            background-image: url(/media/img/yogafire/category/tools.svg);
        }
    }
    a {
        color: #1A1A1A;
        display: block;
        font-size: 15px;
        margin: 0 auto;
        padding-top: 40px;

        b {
            border-bottom: 3px solid transparent;
            display: inline-block;
            font-weight: 400;
            padding-bottom: 3px;
        }
    }
}

/* Active state category nav. */
active_category() {
    a {
        color: #4CB1FF;
    }
    b {
        border-bottom: 3px solid #4CB1FF;
    }
}
[data-page-type="root"] .category-nav .home {
    active_category();
    background-image: url(/media/img/yogafire/category/home-active.svg);
}
[data-page-type~="tarako-games"] .category-nav .tarako-games {
    active_category();
    background-image: url(/media/img/yogafire/category/games-active.svg);
}
[data-page-type~="tarako-lifestyle"] .category-nav .tarako-lifestyle {
    active_category();
    background-image: url(/media/img/yogafire/category/lifestyle-active.svg);
}
[data-page-type~="tarako-tools"] .category-nav .tarako-tools {
    active_category();
    background-image: url(/media/img/yogafire/category/tools-active.svg);
}

.category main ol,
.featured main ol,
.results main ol {
    list-style: none;
}

.category main li,
.featured main li,
.results main li {
    font-size: 14px;
    line-height: 16px;
    margin-top: 10px;
    min-height: 70px;
    width: 100%;
}

.support-list {
    width: 100%;

    a.button {
        background: #4cb1ff;
        color: #fff;
        margin: 10px 10px 0;
        width: unquote('calc(100% - 20px)');
    }
}
